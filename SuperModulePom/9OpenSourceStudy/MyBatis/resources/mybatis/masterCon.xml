<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN" "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
    <properties resource="mybatis/mysql.properties"/>
    <typeAliases>
        <typeAlias alias="Student" type="com.cjs.gohead.mybatis.entity.Student"/>
        <typeAlias alias="Course" type="com.cjs.gohead.mybatis.entity.Course"/>
        <typeAlias alias="EnumHandler" type="com.cjs.gohead.mybatis.typehandler.EnumHandler"/>
    </typeAliases>
    <environments default="development">
        <environment id="development">
            <transactionManager type="JDBC"/>
            <dataSource type="POOLED">
                <property name="driver" value="${driver}"/>
                <property name="url" value="${url}"/>
                <property name="username" value="${username}"/>
                <property name="password" value="${password}"/>
            </dataSource>
        </environment>
    </environments>

    <mappers>
        <mapper resource="mybatis/mapping/studentMapper.xml"/>
        <mapper resource="mybatis/mapping/courseMapper.xml"/>
    </mappers>
</configuration>
